<!-- image-content-4.liquid -->
{%-liquid
  assign text_color = section.settings.txt_color
-%}
<style>
  .customstyle{{ section.id }}{
    {% if text_color != 'transparent' and text_color != 'rgba(0,0,0,0)' %}
      --g-font-color-subtop: {{ text_color }};
      --g-color-heading :  {{ text_color }};
      --color-body-text : {{ text_color }};
      --color-body-text-rgb: {{ text_color.red }}, {{ text_color.green }},  {{ text_color.blue }} ;
    {% endif %}
  }
</style>
<div class="customstyle{{ section.id }} img-section" data-aos="{{ section.settings.animation }}">
    {%- render 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      <div class="row align-items-center">
        <div class="col-md-3 offset-md-1" data-aos="{{ section.settings.animation }}" data-aos-duration="500">
            <div class="img-sectionleft">
                {%- if section.settings.image != blank -%}
                    <noscript>
                        <img src="{{ section.settings.image | image_url: width: 600 }}" alt="{{ section.settings.image.alt }}" class="image-content__image"
                          loading="lazy"
                          width="{{ section.settings.image.width }}"
                          height="{{ section.settings.image.height }}">
                    </noscript>
                    <div class="image-content__image-container">
                        <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;">
                        {% assign img_url = section.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                        <img class="image-content__image lazyload"
                            src="{{ section.settings.image | image_url: width: 1, height: 1 }}"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                            data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ section.settings.image.alt | escape }}"
                            loading="lazy"
                            width="{{ section.settings.image.width }}"
                            height="{{ section.settings.image.height }}">
                        </div>
                    </div>
                {%- else -%}
                    <div class="image-content__image">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {%- endif -%}
            </div>
        </div>
        <div class="col-md-4" data-aos="{{ section.settings.animation }}" data-aos-duration="500">
            <div class="px-lg-5 px-3 py-5 h-100 flex  w-100 {% if section.settings.align_center %}flex--center-vertical{% endif %}" style="background-color:{{ section.settings.bgtext }} ;">
                <div class="p-4 flex__item image-content__text text-{{ section.settings.align }}">
                  {% if section.settings.subtitle != blank %}
                  <div class="mb-2 subtop" >{{ section.settings.subtitle }}</div>
                  {% endif %}
                  {% if  section.settings.title != blank %}
                  <div class="mb-3 {{ section.settings.size_text }}">{{ section.settings.title }}</div>
                  {% endif %}
                  {% if section.settings.text != blank  %}
                    <div class="rte-setting txt-body" >{{ section.settings.text }}</div>
                  {% endif %}
                  {%- if section.settings.button != blank -%}
                    <div class="mt-5">
                      <a href="{{ section.settings.link }}" class="btn {{ section.settings.style_btn }}">
                        {{ section.settings.button }}
                      </a>
                    </div>
                {%- endif -%}
                </div>
            </div>
        </div>
        <div class="col-md-4" data-aos="{{ section.settings.animation }}" data-aos-duration="700">
            <div class="img-sectionright">
                {%- if section.settings.imageright != blank -%}
                    <div class="image-content__image-container">
                        <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.imageright.aspect_ratio | times: 100 }}%;">
                        {% assign img_url = section.settings.imageright | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                        <img class="image-content__image lazyload"
                            src="{{ section.settings.imageright | image_url: width: 650 }}"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                            data-aspectratio="{{ section.settings.imageright.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ section.settings.imageright.alt | escape }}"
                            loading="lazy"
                            width="{{ section.settings.imageright.width }}"
                            height="{{ section.settings.imageright.height }}">
                        </div>
                    </div>
                {%- else -%}
                    <div class="image-content__image">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {%- endif -%}
            </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  
  
