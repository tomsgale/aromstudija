<!-- shop-the-look.liquid -->

{%- liquid
  assign image_col_class = 'col-lg-5 shopthelook__image-col'
  if section.settings.enable_heading_right
    assign slider_col_class = 'col-lg-4 shopthelook__slider-col'
  else
    assign slider_col_class = 'col-lg-7 shopthelook__slider-col'
  endif
  assign text_col_class = 'col-lg-3 shopthelook__text-col'
-%}
{%- style -%}
  .customstyle{{ section.id }} .shopthelook-grid {
    row-gap: 32px;
    position: relative;
    --slider-width: clamp(320px, 34vw, 460px);
  }
  .customstyle{{ section.id }} .image-content__image-wrapper,
  .customstyle{{ section.id }} .image-content__image-wrapper .image-content__image {
    border-radius: 0 !important;
  }
  .customstyle{{ section.id }} .shopthelook__text-col .shopthelook__cta {
    margin-top: 26px !important;
  }
  @media (max-width: 991.98px) {
    .customstyle{{ section.id }} {
      padding-top: 0 !important;
    }
    .customstyle{{ section.id }} .shopthelook__image-col {
      position: relative;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col {
      position: absolute;
      top: 10%;
      left: 50%;
      transform: translateX(-50%);
      width: min(78%, 320px);
      max-width: 100%;
      padding: 0 !important;
      z-index: 3;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col .split-p--right {
      padding: 12px 0 0;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col .shopthelook-wrapper {
      width: 100%;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col .shopthelook-slider {
      padding-top: 6px;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col .shopthelook-slider .productlist-item {
      display: flex;
      justify-content: center;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col .product-card {
      width: 80%;
      max-width: 320px;
      margin: 0 auto;
    }
    .customstyle{{ section.id }} .shopthelook__image-col #dot-{{ section.id }},
    .customstyle{{ section.id }} .shopthelook__image-col .hotspot-dotwrap,
    .customstyle{{ section.id }} .shopthelook__image-col .hotspot-dot {
      display: none !important;
      pointer-events: none;
      visibility: hidden;
    }
    .customstyle{{ section.id }} .section-block {
      padding-top: 0 !important;
      margin-top: 0 !important;
    }
    .customstyle{{ section.id }} .shopthelook__text-col {
      padding-left: clamp(18px, 5vw, 36px);
      padding-right: clamp(18px, 5vw, 36px);
      margin-top: clamp(150px, 32vw, 240px);
      max-width: 1040px;
      margin-left: auto;
      margin-right: auto;
    }
    .customstyle{{ section.id }} .shopthelook__text-col .product-html--top,
    .customstyle{{ section.id }} .shopthelook__text-col .product-html--top * {
      text-align: left !important;
    }
    .customstyle{{ section.id }} .shopthelook__text-col .product-html--top {
      padding-left: clamp(18px, 5vw, 36px);
      padding-right: clamp(18px, 5vw, 36px);
      max-width: 720px;
      margin-left: auto;
      margin-right: auto;
    }
  }
  @media (min-width: 992px) {
    .customstyle{{ section.id }} .shopthelook-grid {
      column-gap: 30px;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col {
      position: absolute;
      width: var(--slider-width);
      max-width: 90vw;
      left: calc(41.6667% - (var(--slider-width) / 2));
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;
    }
    .customstyle{{ section.id }} .shopthelook__slider-col .shopthelook-wrapper {
      width: 100%;
    }
    .customstyle{{ section.id }} .shopthelook__text-col {
      padding-left: 0;
      margin-left: clamp(120px, 16vw, 280px);
    }
    .customstyle{{ section.id }} .shopthelook__text-col .product-html--top,
    .customstyle{{ section.id }} .shopthelook__text-col .product-html--top * {
      text-align: left !important;
    }
  }
{%- endstyle -%}

<div class="customstyle{{ section.id }} split-section shopthelook" data-aos="{{ section.settings.animation }}" data-section-type="shopthelook" 
  style="--color-body : {{ section.settings.bgsection }}">
    {%- render 'style-section' -%}
  <div >
    <div class="section-block">
      <div class="{{ section.settings.setwidth }}">
        {%- if section.settings.enable_heading_right == false -%}
          {%- render 'section-heading' -%}
        {%- endif -%}
        <div class="row mx-0 shopthelook-grid {% if section.settings.enable_right %} flex-row-reverse {% endif %}">
            <div class="{{ image_col_class }} col-12 px-0">
              <div class="image-content__image-container">
                {%- if section.settings.image != blank -%}
                <div class="position-relative image-content__image-wrapper overflow-hidden " 
                    style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;">
                    {% assign img_url = section.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                    <img class="image-content__image lazyload scale-in"
                        src="{{ section.settings.image | image_url: width: 1, height: 1 }}"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.image.alt | escape }}"
                        loading="lazy"
                        width="{{ section.settings.image.width }}"
                        height="{{ section.settings.image.height }}"
                      >
                </div>
                {%- else -%}
                <div class="image-content__image">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
                <ul id="dot-{{ section.id }}" class="list-unstyled position-static">
                  {%- for block in section.blocks -%}
                    {%- liquid
                      assign left = block.settings.left
                      assign top = block.settings.top
                    -%}
                    <li class="hotspot-dotwrap hotspot-solid position-absolute {% if forloop.first %} active {% endif %}" data-pos="{{ forloop.index | minus: 1 }}"
                      style="top:{{ top }}%;left:{{ left }}%; --dot-color: {{ block.settings.dot_color.red }},{{ block.settings.dot_color.green }},{{ block.settings.dot_color.blue }};">
                        <button class="hotspot-dot"  id="pover-{{ block.id }}" data-hotspot>
                          <span class="visually-hidden">{{ forloop.index | minus: 1 }}</span>
                      </button>
                    </li>
                  {%- endfor -%}
                </ul>
            </div>
            </div>
            <div class="{{ slider_col_class }} col-12 px-0 d-flex align-items-center" style="padding-top:30px;padding-bottom:30px;">
              <div class="split-p--right mx-auto py-5 py-lg-0 w-100">
                <div class="shopthelook-wrapper" data-aos="{{ section.settings.animation }}">
                  <div class="shopthelook-slider row mb-0" id="Shopthelook-{{ section.id }}"
                      style="opacity:0"
                      data-rows="1"
                      data-slidesToShow="1"
                      data-arrows="{{ section.settings.arrows }}"
                      data-dots="{{ section.settings.dots }}" 
                      data-draggable="{{ section.settings.draggable }}" 
                      data-infinite="{{ section.settings.infinite }}" 
                      data-section-id="{{ section.id }}" 
                      data-section-type="slickCarousels">
                  {%- for block in section.blocks -%}
                      <div class="productlist-item col carousel__slide-wrapper--{{ block.id }}" {{ block.shopify_attributes }}>
                          {%- if block.settings.product_item != blank -%}
                              {%- render 'product-card', product: block.settings.product_item -%}
                          {%- else -%}
                          {%- render 'product-grid-blank' -%}
                          {%- endif -%}
                      </div>
                  {%- endfor -%}
                  </div>
              </div>
              </div>
            </div>
            {%- if section.settings.enable_heading_right -%}
            <div class="{{ text_col_class }} col-12 px-0 d-flex align-items-center">
              <div class="mx-auto ms-lg-3 mt-4 mt-lg-0">
                <div class="product-html--top text-lg-start text-center">
                  {%- if section.settings.title_top != blank -%}
                    <div class="subtop text-top mb-3" data-aos="{{ section.settings.animation }}" data-aos-duration="300">{{ section.settings.title_top }}</div>
                  {%- endif -%}
                  {%- if section.settings.title != blank -%}
                  <h3 class="section-title-1 {% if section.settings.des != blank %} mb-2 {% else %} mb-4 {% endif %}" data-aos="{{ section.settings.animation }}" data-aos-duration="500">
                    <span>{{ section.settings.title }}</span>
                  </h3>
                  {%- endif -%}
                  {%- if section.settings.des != blank -%}
                  <div class="font-family-2 txt-body-70" data-aos="{{ section.settings.animation }}" data-aos-duration="800">{{ section.settings.des }}</div>
                  {%- endif -%}
                  {%- if section.settings.button_text != blank -%}
                  <div class="shopthelook__cta" data-aos="{{ section.settings.animation }}" data-aos-duration="900">
                    <a class="btn {{ section.settings.style_btn }}" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
                  </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
            {%- endif -%}
           
        </div>
        {%- if section.blocks.size == 0 -%}
            {%- render 'no-blocks' -%}
        {%- endif -%}
        </div>
    </div>
  </div>
  </div>

  
