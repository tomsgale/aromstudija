{%- if settings.enable_wishlsit -%}
  {% liquid
    assign icon_wishlist = section.settings.icon_wishlist
    case icon_wishlist
    when 'text-2'
      assign styleWishlist = 'text-2'
      assign iconClass = 'text-2-indicator'
      assign enableChara = true
    when 'text'
      assign styleWishlist = 'text'
      assign iconClass = 'text-indicator'
    when 'number'
      assign styleWishlist = 'number'
      assign iconClass = 'text-indicator'
    when 'icon-text'
      assign styleWishlist = 'icon-text'
      assign iconClass = 'js-wishlist-indicator'
    else
      assign styleWishlist = 'icon'
      assign iconClass = 'js-wishlist-indicator'
    endcase
  %}
<a href="{{ pages[settings.page_wishlist].url }}" 
  class="site-header__link site-header__wishlist js-wishlist-link header-wl-{{ styleWishlist }}" 
  title="{{ 'products.product.wishlist_text' | t }}">
  <span class="d-flex position-relative align-items-center">
    <span class="d-flex position-relative align-items-center">
    {%- render 'icon-heart' -%}
    {%- if icon_wishlist == 'icon-text' -%}
      {%- if enableChara %} ( {%- endif -%}
        <span class="js-wishlist-count {{ iconClass }}"></span>
        {%- if enableChara %} ) {%- endif -%}
      </span>
    {%- endif -%}
  <span class="wishlist-text">{{ 'products.product.wishlist_text' | t }}</span>
  {%- if icon_wishlist != 'icon-text' -%}
    {%- if enableChara %} ( {%- endif -%}
      <span class="js-wishlist-count {{ iconClass }}"></span>
      {%- if enableChara %} ) {%- endif -%}
    </span>
  {%- endif -%}
  </span>
</a>
{%- endif -%}